<h1>Books</h1>

<%= form_for Book.new do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>

  <%= f.label :author %>:
  <%= f.text_field :author %>

  <%= f.label :month_finished %>:
  <%= f.text_field :month_finished %>

  <%= f.submit %>
<% end %>

<hr>

<div class="container">
  <div id="todo-box" class="drag-container col-xs-3">
    <% @books_todo.each do |book| %>
      <div class="item" db_id="<%= book.id %>" id="<%= book.title.parameterize %>">
        <em><%= book.title %></em>, <%= book.author %>, read in <%= book.month_finished %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-1"></div>
  <div id="up-next-box" class="drag-container col-xs-3">
    <% @books_up_next.each do |book| %>
      <div class="item" db_id="<%= book.id %>" id="<%= book.title.parameterize %>">
        <em><%= book.title %></em>, <%= book.author %>, read in <%= book.month_finished %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-1"></div>
  <div id="done-box" class="drag-container col-xs-3">
    <% @books_done.each do |book| %>
      <div class="item" db_id="<%= book.id %>" id="<%= book.title.parameterize %>">
        <em><%= book.title %></em>, <%= book.author %>, read in <%= book.month_finished %>
      </div>
    <% end %>
  </div>
</div>


